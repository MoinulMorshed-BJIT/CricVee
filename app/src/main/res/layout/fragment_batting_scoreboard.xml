<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.BattingScoreboardFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/first_innings_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/fours_column"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Team A Innings"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/scorecardTeamNameSize"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/player_column"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/first_innings_team"
                    android:text="Player"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/runs_column"
                    android:layout_width="@dimen/invisible_runs_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/balls_column"
                    app:layout_constraintTop_toTopOf="@id/player_column"
                    app:layout_constraintBottom_toBottomOf="@id/player_column"
                    android:text="R"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/balls_column"
                    android:layout_width="@dimen/invisible_runs_size"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/fours_column"
                    app:layout_constraintTop_toTopOf="@id/player_column"
                    app:layout_constraintBottom_toBottomOf="@id/player_column"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fours_column"
                    android:layout_width="@dimen/invisible_fours_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/sixes_column"
                    app:layout_constraintTop_toTopOf="@id/player_column"
                    app:layout_constraintBottom_toBottomOf="@id/player_column"
                    android:text="4s"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/sixes_column"
                    android:layout_width="@dimen/invisible_sixes_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/strike_rate_column"
                    app:layout_constraintTop_toTopOf="@id/player_column"
                    app:layout_constraintBottom_toBottomOf="@id/player_column"
                    android:text="6s"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/strike_rate_column"
                    android:layout_width="@dimen/invisible_fours_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/player_column"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/player_column"
                    android:text="S/R"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/batting_score_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/strike_rate_column"
                    tools:listitem="@layout/batting_score_item"
                    />

               <TextView
                   android:id="@+id/second_innings_team"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@id/batting_score_recyclerView"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintBottom_toTopOf="@id/balls_column2"
                   tools:text="Team B Innings"
                   android:textSize="@dimen/scorecardTeamNameSize"
                   android:textStyle="bold"
                   />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/player_column2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/second_innings_team"
                    android:text="Player"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/runs_column2"
                    android:layout_width="@dimen/invisible_runs_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/balls_column2"
                    app:layout_constraintTop_toTopOf="@id/player_column2"
                    app:layout_constraintBottom_toBottomOf="@id/player_column2"
                    android:text="R"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/balls_column2"
                    android:layout_width="@dimen/invisible_runs_size"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/fours_column2"
                    app:layout_constraintTop_toTopOf="@id/player_column2"
                    app:layout_constraintBottom_toBottomOf="@id/player_column2"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fours_column2"
                    android:layout_width="@dimen/invisible_fours_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/sixes_column2"
                    app:layout_constraintTop_toTopOf="@id/player_column2"
                    app:layout_constraintBottom_toBottomOf="@id/player_column2"
                    android:text="4s"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/sixes_column2"
                    android:layout_width="@dimen/invisible_sixes_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/strike_rate_column2"
                    app:layout_constraintTop_toTopOf="@id/player_column2"
                    app:layout_constraintBottom_toBottomOf="@id/player_column2"
                    android:text="6s"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/strike_rate_column2"
                    android:layout_width="@dimen/invisible_fours_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/player_column2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/player_column2"
                    android:text="S/R"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/batting2_score_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/strike_rate_column2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/batting_score_item"
                    />





            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>